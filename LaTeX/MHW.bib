journal = {Ecological Economics},
keywords = {Coasts,Ecosystem Service Product,Environment,Human population},
number = {2-3},
pages = {254--272},
title = {{The coasts of our world: Ecological, economic and social importance}},
volume = {63},
year = {2007}
}
