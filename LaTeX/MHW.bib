doi = {10.1002/ece3.1556},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {Biogenic habitat,Climate change,Coastal defense structure,Cold wave,Extreme weather event,Larval supply,Monitoring,Sabellaria alveolata},
number = {15},
pages = {3210--3222},
pmid = {26355379},
title = {{Historical comparisons reveal multiple drivers of decadal change of an ecosystem engineer at the range edge}},
volume = {5},
