isbn = {1054-3139},
issn = {10543139},
journal = {ICES Journal of Marine Science},
keywords = {biomass,catch,chokka squid,cold ridge,currents,ecosystem,gradients,spawning,upwelling filament},
number = {1},
pages = {33--55},
